<div class="page-margin">
  <div class="px-4 sm:px-8 grid grid-cols-2 lg:grid-cols-4 gap-4 my-8 animate-fade-in">
    <% @games.each_with_index do |game, index| %>
    <% colors = [ "bg-red-100", "bg-blue-100", "bg-emerald-100", "bg-yellow-100", "bg-violet-100", "bg-orange-100", "bg-stone-100", "bg-purple-100" ] %>
    <% color = colors.shuffle.first %>
      <%= link_to game_path(game), class: "#{color} flex items-center justify-center aspect-video rounded-xl hover:opacity-85" do %>
        <p class="text-xl font-semibold"><%= game.title %></p>
      <% end %>
    <% end %>
  </div>
</div>
