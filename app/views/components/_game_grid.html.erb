<%= turbo_frame_tag "game" do %>
  <div class="flex flex-col items-center justify-center gap-8">
    <h1 class="text-3xl font-bold"><%= game.title %></h1>
    <div class="w-full">
      <% game.parsed_matrix.each do |row| %>
        <div class="flex flex-wrap basis-full">
          <% row.each do |column| %>
            <div class="<%= column == "*" ? "bg-black" : "bg-white" %> aspect-square flex-1 border-[1px] border-black"></div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>