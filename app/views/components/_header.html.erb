<nav class="sm:bg-black fixed top-0 left-0 w-full z-[100]" data-controller="header">
  <div class="bg-black mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
    <div class="relative flex h-16 items-center justify-between">
      <div class="flex items-center sm:hidden flex-1">
        <!-- Mobile menu button-->
        <button type="button" class="relative inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white" aria-controls="mobile-menu" aria-expanded="false" data-header-target="button" data-action="click->header#toggle">
          <span class="absolute -inset-0.5"></span>
          <span class="sr-only">Open main menu</span>
          <!--
            Icon when menu is closed.

            Menu open: "hidden", Menu closed: "block"
          -->
          <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-header-target="iconMenuClosed">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
          <!--
            Icon when menu is open.

            Menu open: "block", Menu closed: "hidden"
          -->
          <svg class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-header-target="iconMenuOpened">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
        <div class="flex flex-shrink-0 items-center">
            <a href="<%= root_path %>">
                <img class="h-8 w-auto" src="/logo.jpg" alt="Extendi Logo">
            </a>
        </div>
        <div class="hidden sm:ml-6 sm:block">
          <div class="flex space-x-4">
            <% if current_user %>
              <a href="<%= upload_path %>" class="px-3 py-2 text-sm font-medium text-white" aria-current="page">Upload Matrix</a>
            <% else %>
              <%= link_to :Login, new_user_session_path, class: "px-3 py-2 text-sm font-medium text-white" %>
            <% end %>
            <% if current_user && current_user.games.size > 0 %>
              <a href="<%= games_path %>" class="px-3 py-2 text-sm font-medium text-white" aria-current="page">Your games</a>
            <% end %>
          </div>
        </div>
      </div>
      
        <div class="flex-1 flex justify-end <%= current_user ? "" : "opacity-0 invisible pointer-events-none" %>">
          <%= link_to :Logout, destroy_user_session_path, data: { turbo_method: :delete }, class: "px-3 py-2 text-sm font-medium text-white" %>
        </div>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div class="sm:hidden" id="mobile-menu" data-header-target="menu">
    <div class="px-2 pb-3 pt-2 flex items-center justify-center">
      <% if current_user %>
        <a href="<%= upload_path %>" class="px-3 py-2 text-sm font-medium text-white" aria-current="page">Upload Matrix</a>
      <% else %>
        <%= link_to :Login, new_user_session_path, class: "px-3 py-2 text-sm font-medium text-white" %>
      <% end %>
      <% if current_user && current_user.games.size > 0 %>
        <a href="<%= games_path %>" class="px-3 py-2 text-sm font-medium text-white" aria-current="page">Your games</a>
      <% end %>      
      <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
    </div>
  </div>
</nav>
